<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/fragment_fullscreen_imgview_container">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_action_ic_close_circle_filled"
            android:id="@+id/exitFullscreenImg"
            android:onClick="exitFullscreenImgOnClick"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/fullscreen_imgview_container"></FrameLayout>


    <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/fullscreen_imgview"
         android:layout_alignParentEnd="true"
         android:layout_alignParentStart="true"
         android:layout_alignParentBottom="true"
         android:layout_alignParentTop="true" />
    </RelativeLayout>

