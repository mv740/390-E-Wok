                fab:menu_openDirection="down"
                fab:menu_animationDelayPerItem="0"
                fab:menu_shadowColor="#444"
                fab:menu_colorNormal="@color/rca_primary"
                fab:menu_colorPressed="#FFFE7070"
                fab:menu_colorRipple="#FFFE7070">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:menu_colorNormal="@color/rca_onclick"
                    fab:menu_colorPressed="#FFFE7070"
                    fab:menu_colorRipple="#FFFE7070"
                    android:onClick="floorButton1OnClick"
                    android:src="@drawable/floor1_icon"/>

                <com.github.clans.fab.FloatingActionButton
