<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.github.ndczz.infinityloading.InfinityLoading
        android:id="@+id/loading"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        app:infl_backColor="@color/rca_primary"
        app:infl_drawBack="true"
        app:infl_reverse="true"
        app:infl_progressColor="@color/colorPrimaryDark"
        app:infl_strokeWidth="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UPDATING"
        android:id="@+id/textView"
        android:layout_below="@+id/loading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/rca_primary"
        android:textStyle="bold" />


</RelativeLayout>