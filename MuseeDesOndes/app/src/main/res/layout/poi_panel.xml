<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ext="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="#FFE33C3C"
    android:gravity="center|top"
    android:orientation="vertical"
    android:textSize="10dp">

    <TextView
        android:id="@+id/poi_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:text="POI TITLE"
        android:textSize="30dp" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/get_directions_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/scrollView"
        android:layout_gravity="bottom|right"
        android:src="@drawable/location_icon"
        fab:fab_colorNormal="#FFFFFFFF"
        fab:fab_colorPressed="#FFFE7070"
        fab:fab_colorRipple="#FFFE7070"
        fab:menu_shadowColor="#444" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/poi_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/my_recycler_view"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_play_circle_filled_white_48dp"
        android:longClickable="true"
        android:onClick="playAudioFile"
        android:textColor="#000000" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/my_recycler_view"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:maxHeight="100dp"
        android:minHeight="100dp"
        android:scrollbarSize="50dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/play_button"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp">

        <com.bluejamesbond.text.DocumentView
            android:id="@+id/poi_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            ext:documentView_text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque sit amet ipsum ultrices, elementum tellus non, sagittis dolor. Ut odio sem, venenatis non varius non, vulputate ut tortor. Nulla ullamcorper nulla sed magna gravida, sit amet varius ipsum malesuada. Cras consectetur, mi vitae maximus efficitur, erat mi viverra mi, tristique pretium est lorem vel ipsum. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Integer eu efficitur arcu. Donec ultricies feugiat libero, vel egestas ex. Suspendisse at Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque sit amet ipsum ultrices, elementum tellus non, sagittis dolor. Ut odio sem, venenatis non varius non, vulputate ut tortor. Nulla ullamcorper nulla sed magna gravida, sit amet varius "
            ext:documentView_textAlignment="justified"
            ext:documentView_textColor="@android:color/white"
            ext:documentView_textSize="20dp"></com.bluejamesbond.text.DocumentView>
    </ScrollView>

</RelativeLayout>