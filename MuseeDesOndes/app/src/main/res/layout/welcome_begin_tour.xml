<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="@string/begin_tour_button_text"
            android:id="@+id/begin_tour_button"
            android:background="@drawable/round_button"
            android:height="200dp"
            android:width="200dp"
            android:layout_above="@+id/settings_button"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:onClick="beginTourOnClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:id="@+id/settings_button"
            android:onClick="settingsOnClick"
            android:layout_alignTop="@+id/button4"
            android:layout_alignEnd="@+id/begin_tour_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beacon Test"
            android:id="@+id/button4"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/begin_tour_button"
            android:layout_marginBottom="27dp" />
    </RelativeLayout>